# Database Configuration
MONGODB_URI=mongodb://localhost:58745/cs_brain_tracker

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_secret_here_change_this_in_production
JWT_ISSUER=https://cs-brain-tracker.local/
JWT_AUDIENCE=cs-brain-tracker-api
# JWKS_URI=https://your-jwks-endpoint.com/.well-known/jwks.json # Optional: for remote key verification

# OAuth Providers
# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Personal API Configuration
PERSONAL_API_SECRET=your_personal_api_secret_for_cli_tools

# Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Redis Configuration (Optional - for rate limiting)
REDIS_URL=redis://localhost:6379

# Application URLs
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_here

# CS Brain Integration
CS_BRAIN_PATH=~/True-CS-Obsidian/CS-Brain
